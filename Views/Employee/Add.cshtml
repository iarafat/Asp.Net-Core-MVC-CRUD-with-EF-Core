@model Asp.netCoreMVCCRUD.Models.EmployeeViewModel;


@{
    ViewData["Title"] = "Add Employee";
}

<h1>Add Employee</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form class="m-1 p-1" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeCode"></label>
        <input asp-for="EmployeeCode" class="form-control">
        <span asp-validation-for="EmployeeCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control">
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OfficeLocation"></label>
        <input asp-for="OfficeLocation" class="form-control">
        <span asp-validation-for="OfficeLocation" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>